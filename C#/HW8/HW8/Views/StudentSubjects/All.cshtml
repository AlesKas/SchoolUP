@using HW8.Models
@model List<Student>
@{
    ViewBag.Title = "Studenti a předměty";

}

<h2>Zobrazení všech předmětů</h2>
<div>
    <a href="@Url.Action("SelectStudent")">Přidat studenta a přemět</a>
</div>

<table class="table">
    <tr><th>Jméno</th><th>Příjmení</th><th>Název předmětu</th><th>Akce</th></tr>
    @foreach (var s in Model)
    {
          foreach(var m in s.Subjects)
           {
             <tr>
                    <td>@s.Name</td>
                    <td>@s.Surname</td>
                    <td>@m.Name</td>
                    <td><a href="@Url.Action("Detail", "Subject")/@s.Id"><span class="glyphicon glyphicon-list-alt"></span></a><a href="@Url.Action("Edit", "Subject")/@s.Id"><span class="glyphicon glyphicon-pencil"></span></a> <a href="@Url.Action("Delete", "Subject")/@s.Id"><span class="glyphicon glyphicon-trash"></span></a></td>


             </tr>
           }
    }
</table>

